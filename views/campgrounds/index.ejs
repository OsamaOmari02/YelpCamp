<% layout('layouts/boilerplates') -%>
    <h1>All Campgrounds</h1>
    <div>
        <% for (let camp of campgrounds){ %>
            <div class="card mb-3">
                <div class="row">
                    <div class="col-md-4">
                        <% if (camp.images.length>0) {%>
                            <img width="100%" src="<%= camp.images[0].url %> " class="img-fluid" crossorigin="anonymous"
                                alt="image">
                            <% } %>
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title">
                                <%= camp.title %>
                            </h5>
                            <p class="card-text">
                                <%= camp.desc %>
                            </p>
                            <p class="card-text">
                                <small class="text-muted">
                                    <%= camp.location %>
                                </small>
                            </p>
                            <br>
                            <a href="/campgrounds/<%= camp._id %> " class="btn btn-primary">
                                View <%= camp.title %>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            <%}%>
    </div>