<% layout('layouts/boilerplates') -%>
    <div class="row">
        <div class="text-center">
            <h1>Edit CampGround</h1>
            <div class="col-6 offset-3">
                <form action="/campgrounds/<%= campground._id %>?_method=put" method="POST" novalidate
                    class="validated-form">
                    <div class="mb-3">
                        <label class="form-label" for="title">Title</label>
                        <input class="form-control" type="text" value="<%=campground.title%> " name="campground[title]"
                            id="title" required>
                        <div class="valid-feedback">
                            Looks Good!
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="location">Location</label>
                        <input class="form-control" type="text" value="<%=campground.location%> "
                            name="campground[location]" id="location" required>
                        <div class="valid-feedback">
                            Looks Good!
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="image">Image Url</label>
                        <input class="form-control" type="text" value="<%=campground.image%> " name="campground[image]"
                            id="image" required>
                        <div class="valid-feedback">
                            Looks Good!
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="price">CampGround Price</label>
                        <div class="input-group">
                            <span class="input-group-text" id="price-label">$</span>
                            <input type="text" class="form-control" value="<%=campground.price%> "
                                name="campground[price]" placeholder="0.00" aria-describedby="price-label" required>
                            <div class="valid-feedback">
                                Looks Good!
                            </div>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="desc">Description</label>
                        <textarea class="form-control" type="text" name="campground[desc]" id="desc"
                            required><%= campground.desc %> </textarea>
                        <div class="valid-feedback">
                            Looks Good!
                        </div>
                    </div>
                    <div class="mb-3">
                        <button class="btn btn-info">Update CampGround</button>
                    </div>
                </form>
            </div>
        </div>
    </div>